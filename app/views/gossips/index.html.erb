<% if @gossip.save %>
  <div class="alert alert-success" role="alert">
    Super ! Tu as réussi à créer un potin !
  </div>
<% end %>

<!-- Jumbotron -->
<div class="card card-image" style="background-image: url(https://upload.wikimedia.org/wikipedia/commons/a/a8/Nighthawks_by_Edward_Hopper_1942.jpg); background-size: cover; background-position-y: 35%; background-repeat: no-repeat;">
  <div class="text-white text-center rgba-stylish-strong py-5 px-4">
    <div class="py-5">
      <!-- Content -->
      <h2 class="card-title h2 my-4 py-2">Hello ! Voici la page daccueil de The Gossip Project</h2>
      <p class="mb-4 pb-2 px-md-5 mx-md-5">Tu veux créer un nouveau potin ? Clique sur le boutton ci-dessous.</p>
      <%= link_to "Créer un nouveau potin", new_gossip_path, :type => "button",  :class => 'btn btn-primary ml-5' %>

    </div>
  </div>
</div>
<!-- Jumbotron -->

<h1 class="display-4 ml-3 my-4"></h1>

<h2 class="lead ml-3 my-4"></h2>



<h2 class="lead ml-3 my-4">Tous les potins deja postes, fais toi plaiz !</h2>

<div class="d-flex flex-wrap justify-content-around">
  <% Gossip.all.each do |gossip|%>

    <div class="card my-3 border border-primary rounded col-6 col-sm-4 col-lg-2 px-0 mx-2" style="width: 25rem;">
      <div class="card-header">
        Gossip n°<%= Gossip.all.index(gossip) + 1 %>, de <%= gossip.user.first_name %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= gossip.title %></h5>
        <p><%= gossip.content %></p>
        <div style="position: absolute;  bottom: 10px;"><%= link_to "Lien du gossip", gossip_path(Gossip.all.index(gossip) + 1), :class => "card-link align-bottom"%></div>
      </div>
    </div>

  <% end %>
</div>
